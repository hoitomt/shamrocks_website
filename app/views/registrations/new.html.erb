<div class="mt-3 sr-content">
  <h1>Registration</h1>
  <%= simple_form_for @registration, url: registrations_path,
    wrapper: :horizontal_form,
    wrapper_mappings: {
      boolean:       :horizontal_boolean,
      check_boxes:   :horizontal_collection,
      date:          :horizontal_multi_select,
      datetime:      :horizontal_multi_select,
      file:          :horizontal_file,
      radio_buttons: :horizontal_collection,
      range:         :horizontal_range,
      time:          :horizontal_multi_select
    } do |f| %>

  <%= f.error_notification %>
  <hr>
  <%= f.input :player_first_name %>
  <%= f.input :player_last_name %>

  <%= f.input :grade_level, collection: [4, 5, 6, 7, 8] %>
  <%= f.input :need_uniform %>
  <div id="js-uniform-info">
    <%= f.input :uniform_jersey_size, collection: Registration::SIZES, default: 'Not Needed' %>
    <%= f.input :uniform_short_size, collection: Registration::SIZES, default: 'Not Needed' %>
  </div>
  <hr>
  <%= f.input :parent_first_name %>
  <%= f.input :parent_last_name %>
  <%= f.input :email, input_html: { autocomplete: 'email' } %>

  <div class="form-group row mb-0">
    <div class="col-sm-9 offset-sm-3">
      <%= f.button :submit, class: "btn-primary" %>
    </div>
  </div>
  <% end %>
</div>
