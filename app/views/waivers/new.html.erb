<div class="mt-3 text-center sr-content left-paragraph">
  <h1>Waiver for <%= @registration.player_name %></h1>

  <%= render 'content' %>

  <%= simple_form_for @waiver, url: waivers_path, wrapper: :horizontal_form, wrapper_mappings: {
    boolean: :horizontal_boolean,
    check_boxes: :horizontal_collection,
    date: :horizontal_multi_select,
    datetime: :horizontal_multi_select,
    file: :horizontal_file,
    radio_buttons: :horizontal_collection,
    range: :horizontal_range,
    time: :horizontal_multi_select } do |f| %>

    <%= f.input_field :registration_id, as: :hidden, value: @registration.id %>
    <p class="font-weight-bold">Waiver for <%= @registration.player_name %></p>

    <div class="col-sm-12 text-left">
      <input name="waiver[confirmation]" type="hidden" value="0">
      <input class="form-check-input boolean optional" type="checkbox" value="1" name="waiver[confirmation]" id="waiver_confirmation">
      <label class="form-check-label boolean optional font-weight-bold" for="waiver_confirmation">I HAVE READ THE ENTIRE WAIVER AGREEMENT, UNDERSTAND IT COMPLETELY AND AGREE TO BE BOUND BY ITS TERMS:</label>
    </div>
    <div class="col-sm-12 pt-3">
      <button class="btn btn-primary">Register</button>
    </div>
  <% end %>
</div>
